# https://wiki.archlinux.org/title/Newsboat

include ~/.config/newsboat/dark

auto-reload yes
confirm-mark-all-feeds-read no
confirm-mark-feed-read no
reload-threads 128
text-width 120

# https://m-chrzan.xyz/blog/vim-keybindings-for-newsboat.html
unbind-key g
unbind-key G
bind-key g home
bind-key G end

unbind-key j
unbind-key k
bind-key j down
bind-key k up
