theme "catppuccin-mocha"
default_layout "compact"
default_mode "locked"
on_force_close "quit"
simplified_ui true

ui {
    pane_frames {
        hide_session_name true
    }
}

keybinds {
    normal {
        bind "Alt p" { SwitchFocus; }
        bind "Alt n" { NewPane; }
        bind "Alt m" { NewPane "Down"; }
    }
    locked {
        bind "Alt p" { SwitchFocus; }
        bind "Alt n" { NewPane; }
        bind "Alt m" { NewPane "Down"; }
    }
}
